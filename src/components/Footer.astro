<footer class="footer" style="margin-top: 12rem;">
	<div id="subscription-area">
		<p>
			<span style="color: var(--color-accent);;"
				>Sign Up for My Newsletter!</span
			>
			<br />
			<small
				>Your email is safe with me - I won't sell it, even for a laugh!</small
			>
		</p>
		<iframe
			src="https://sharifff.substack.com/embed"
			width="480"
			height="150"
			frameborder="0"
			scrolling="no"></iframe>
	</div>

	<!-- {# <a class="footer_item" href="/feed.xml">rss</a> #} -->
	<span class="footer_item">&copy; 2024</span>
</footer>
<script is:inline>
	(() => {
		// Blur the content when the menu is open
		const cbox = document.getElementById('menu-trigger');
		cbox.addEventListener('change', function () {
			const area = document.querySelector('.wrapper');
			this.checked
				? area.classList.add('blurry')
				: area.classList.remove('blurry');
		});
	})();
</script>
